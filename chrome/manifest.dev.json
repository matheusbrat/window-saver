{
  "version": "0.0.3",
  "name": "Window Saver",
  "manifest_version": 2,
  "description": "Select windows to be monitored, close your windows and reopen it later. Very useful to organize your windows.",
  "browser_action": {
    "default_title": "Window Saver",
    "default_popup": "popup.html"
  },
  "author": "Matheus Bratfisch",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "contextMenus",
    "management",
    "tabs",
    "storage",
    "chrome://favicon/"
  ],
  "content_security_policy": "script-src 'self' http://localhost:3000 'unsafe-eval'; object-src 'self'"
}

{
  "version": "0.0.0",
  "name": "window-saver",
  "manifest_version": 2,
  "description": "Chrome extension that let you save a window and it will monitor it so you can close it and reopen it in future.",
  "browser_action": {
    "default_title": "Window Saver",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "chrome://favicon/"
  ],
  "content_security_policy": "default-src 'self'; script-src 'self'; style-src * 'unsafe-inline'; img-src * 'self' data:;"
}

{
  "version": "0.0.0",
  "name": "window-saver",
  "manifest_version": 2,
  "description": "Extension that let you save a window, monitor it, close it and reopen later.",
  "browser_action": {
    "default_title": "Window Saver",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16x16.png",
    "24": "img/icon-24x24.png",
    "32": "img/icon-32x32.png"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "chrome://favicon/"
  ],
  "content_security_policy": "default-src 'self'; script-src 'self'; style-src * 'unsafe-inline'; img-src 'self' data:;"
}
